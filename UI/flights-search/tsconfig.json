{
  "compilerOptions": {
    "target": "es2017",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noImplicitThis": true,
    "noEmitOnError": false,
    "noEmit": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "baseUrl": ".",
    "module": "es6",
    "paths": {
      "flights-search/tests/*": ["tests/*"],
      "flights-search/*": ["app/*", "types/ember-freestyle/*", "types/expo/*"],
      "flights-search/mirage/*": ["mirage/*"],
      "*": ["types/*"]
    }
  },
  "include": ["app", "tests", "types", "mirage"]
}